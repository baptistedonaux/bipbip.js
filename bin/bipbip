#!/usr/bin/env node

"use strict";

let Bipbip = require('../lib/index.js'),
	commander = require("commander"),
	fs = require("fs"),
	helper = require("../lib/helper.js"),

	pkg,
	envValue;

try {
	pkg = require('../package.json');
} catch (err) {
	helper.log(err.message, "red");
	process.exit(1);
}

commander
	.version(pkg.version)
	.description("Bipbip deploy for you")
	.usage('[options] <env>')
	.option('-f, --file <absolute/path/to/config.file.js>', 'Profile file', process.cwd() + "/deploy.js")
	.on('--help', function() {
	    console.log('  Examples:');
	    console.log('');
	    console.log('    $ bipbip dev');
	    console.log('    $ bipbip -f deploy.js dev');
	    console.log('');
	})
	.action(function (env) {
		envValue = env;
	})
	.parse(process.argv);

if (fs.existsSync(commander.file) === false) {
	helper.log(commander.file + ' not found', "red");
	process.exit(1);
} else if (envValue === undefined) {
	helper.log('Please set one environment to use', "red");
	process.exit(1);
}

let bipbip = new Bipbip(commander.file, envValue);
bipbip.run();